{
  "components/common/subscription-form": "{{#unless location '===' 'column'}}\n<div class=\"newsletter-box__content\">\n    <h2 class=\"newsletter-box__heading\">{{lang 'newsletter.subscribe'}}</h2>\n    <p class=\"newsletter-box__intro\">{{lang 'newsletter.subscribe_intro'}}</p>\n</div>\n{{/unless}}\n\n<form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n    <fieldset class=\"form-fieldset\">\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n        <input type=\"hidden\" name=\"check\" value=\"1\">\n        <div class=\"form-field\">\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n            <div class=\"form-prefixPostfix wrap\">\n                <input class=\"form-input\"\n                       id=\"nl_email\"\n                       name=\"nl_email\"\n                       type=\"email\"\n                       value=\"{{customer.email}}\"\n                       placeholder=\"{{lang 'newsletter.email_placeholder'}}\"\n                       aria-describedby=\"alertBox-message-text\"\n                       aria-required=\"true\"\n                       autocomplete=\"email\"\n                       required\n                >\n                {{#unless location '===' 'column'}}\n                    <input class=\"button button--primary form-prefixPostfix-button--postfix\"\n                        type=\"submit\"\n                        value=\"{{lang 'newsletter.subscribe_submit'}}\"\n                    >\n                {{else}}\n                    <button class=\"button button--primary form-prefixPostfix-button--postfix\"\n                        type=\"submit\"\n                        aria-label=\"{{lang 'newsletter.subscribe_submit'}}\"\n                    >\n                        <i class=\"icon\" aria-hidden=\"true\">\n                            <svg><use href=\"#icon-epic-plane\" /></svg>\n                        </i>\n                    </button>\n                {{/unless}}\n            </div>\n            {{#if location '===' 'column'}}\n                <p class=\"newsletter-column__intro\">{{lang 'newsletter.subscribe_intro'}}</p>\n            {{/if}}\n            {{#if settings.show_newsletter_summary }}\n                <div class=\"newsletter-box__summary\">{{{settings.newsletter_summary}}}</div>\n            {{/if}}\n        </div>\n    </fieldset>\n</form>\n"
}
